{
    "name": "health-reminder",
    "displayName": "健康提醒 - Health Reminder",
    "description": "久坐和喝水强制提醒插件",
    "version": "1.0.0",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "健康提醒设置",
            "properties": {
                "healthReminder.sitReminderInterval": {
                    "type": "number",
                    "default": 60,
                    "minimum": 5,
                    "maximum": 180,
                    "description": "久坐提醒间隔（分钟）"
                },
                "healthReminder.drinkReminderInterval": {
                    "type": "number",
                    "default": 45,
                    "minimum": 5,
                    "maximum": 120,
                    "description": "喝水提醒间隔（分钟）"
                },
                "healthReminder.enableSitReminder": {
                    "type": "boolean",
                    "default": true,
                    "description": "启用久坐提醒"
                },
                "healthReminder.enableDrinkReminder": {
                    "type": "boolean",
                    "default": true,
                    "description": "启用喝水提醒"
                },
                "healthReminder.language": {
                    "type": "string",
                    "enum": [
                        "zh-CN",
                        "en"
                    ],
                    "default": "zh-CN",
                    "description": "界面语言 / Interface Language",
                    "enumDescriptions": [
                        "中文简体",
                        "English"
                    ]
                }
            }
        },
        "commands": [
            {
                "command": "healthReminder.resetTimers",
                "title": "重置所有计时器"
            },
            {
                "command": "healthReminder.showStatus",
                "title": "显示提醒状态"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0",
        "@types/node": "16.x",
        "typescript": "^4.9.4"
    }
}
